extends ../layout/common
block content
  h1 Register
  if error
    .alert.alert-danger= error
  form(action='/register' method="POST")
    .form-group
      label(for='email') Email address
      input#email.form-control(type='email' name='email' required)
    .form-group
      label(for='name') Name
      input#name.form-control(type='text' name='name' required)
    .form-group
      label(for='phone') Phone
      input#phone.form-control(type='text' name='phone' minlength="10" maxlength="10" required)
    .form-group
      label(for='password') Password
      input#password.form-control(type='password' name='password' minlength="6" required)
    button.btn.btn-primary(type='submit') Submit